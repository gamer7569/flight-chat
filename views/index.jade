extends layout

block head
  link(rel='stylesheet', href='/stylesheets/homepage.css')
block scripts
  script(src='/javascripts/homepage.js')


block body
  h1.bg-black-transp.brand-header
    a.plain(href='/')
      img(src="/images/logo-blue.png" alt="TRYBES logo")
      span TRYBES
  
  h2.separate.bg-black-transp The social app for active men who like men.
  

  .bg-black-transp.prompt
    p We're launching soon - sign up for a reminder:
    form.invite-request
      input(type='email', placeholder='Email')
      button Remind me

block footer
  ul
    li 
      a(href='/about') About
    li &copy; 2013
    li Made in London
